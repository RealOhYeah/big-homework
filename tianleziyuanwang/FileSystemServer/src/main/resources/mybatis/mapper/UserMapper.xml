<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gsxy.filesystemserver.mapper.UserMapper">
    <!--用户登录-->
    <select id="userLogin" resultType="com.gsxy.filesystemserver.domain.User"
            parameterType="com.gsxy.filesystemserver.domain.bo.UserLoginBo">
        select *
        from user
        where
            username = #{username} and
            status = 0 and
            del_flag = 0
            limit 1
    </select>

    <!--用户注册-->
    <insert id="userReg" parameterType="com.gsxy.filesystemserver.domain.User">
        insert into
            user
            (username,password,name,org,status,del_flag)
        values
            (#{username},#{password},#{name},#{org},0,0)
    </insert>

    <!-- 根据username查询用户 -->
    <select id="findByUsername" resultType="com.gsxy.filesystemserver.domain.User" parameterType="java.lang.String">
        select *
        from user
        where
            username=#{username}
            limit 1
    </select>

    <update id="userUpdate" parameterType="com.gsxy.filesystemserver.domain.bo.UserUpdateBo">
        update user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="org != null and org != ''">
                org = #{org},
            </if>
            <if test="updateBy != null">
                update_by=#{updateBy},
            </if>
            <if test="updateTime != null">
                update_time=#{updateTime}
            </if>
        </set>
        where
        id=#{id}
    </update>
</mapper>

