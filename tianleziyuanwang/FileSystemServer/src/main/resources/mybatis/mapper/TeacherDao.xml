<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gsxy.filesystemserver.dao.TeacherDao">
    <resultMap type="com.gsxy.filesystemserver.domain.Teacher" id="TeacherMap">
        <result property="tno" column="tno" jdbcType="VARCHAR"/>
        <result property="tname" column="tname" jdbcType="VARCHAR"/>
        <result property="tsex" column="tsex" jdbcType="VARCHAR"/>
        <result property="tbirthday" column="tbirthday" jdbcType="TIMESTAMP"/>
        <result property="prof" column="prof" jdbcType="VARCHAR"/>
        <result property="depart" column="depart" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TeacherMap">
        select tno,tname,tsex,tbirthday,profdepart
        from teacher
        where tno = #{tno}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TeacherMap">
        select
        tno,tname,tsex,tbirthday,prof,depart
        from teacher
        <where>
            <if test="tno != null and tno != ''">
                and tno = #{tno}
            </if>
            <if test="tname != null and tname != ''">
                and tname = #{tname}
            </if>
            <if test="tsex != null and tsex != ''">
                and tsex = #{tsex}
            </if>
            <if test="tbirthday != null">
                and tbirthday = #{tbirthday}
            </if>
            <if test="prof != null and prof != ''">
                and prof = #{prof}
            </if>
            <if test="depart != null and depart != ''">
                and depart = #{depart}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from teacher
        <where>
            <if test="tno != null and tno != ''">
                and tno = #{tno}
            </if>
            <if test="tname != null and tname != ''">
                and tname = #{tname}
            </if>
            <if test="tsex != null and tsex != ''">
                and tsex = #{tsex}
            </if>
            <if test="tbirthday != null">
                and tbirthday = #{tbirthday}
            </if>
            <if test="prof != null and prof != ''">
                and prof = #{prof}
            </if>
            <if test="depart != null and depart != ''">
                and depart = #{depart}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="tno" useGeneratedKeys="true">
        insert into teacher(tno,tname,tsex,tbirthday,prof,depart)
        values (#{tname}#{tsex}#{tbirthday}#{prof}#{depart})
    </insert>

    <insert id="insertBatch" keyProperty="tno" useGeneratedKeys="true">
        insert into teacher(tno,tname,tsex,tbirthday,prof,depart)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.tname}#{entity.tsex}#{entity.tbirthday}#{entity.prof}#{entity.depart})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="tno" useGeneratedKeys="true">
        insert into teacher(tno,tname,tsex,tbirthday,prof,depart)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.tname}#{entity.tsex}#{entity.tbirthday}#{entity.prof}#{entity.depart})
        </foreach>
        on duplicate key update
        tname = values(tname)tsex = values(tsex)tbirthday = values(tbirthday)prof = values(prof)depart = values(depart)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update teacher
        <set>
            <if test="tname != null and tname != ''">
                tname = #{tname},
            </if>
            <if test="tsex != null and tsex != ''">
                tsex = #{tsex},
            </if>
            <if test="tbirthday != null">
                tbirthday = #{tbirthday},
            </if>
            <if test="prof != null and prof != ''">
                prof = #{prof},
            </if>
            <if test="depart != null and depart != ''">
                depart = #{depart},
            </if>
        </set>
        where tno = #{tno}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from teacher
        where tno = #{tno}
    </delete>
</mapper>

